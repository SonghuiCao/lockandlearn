<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayFlashCards" >

    <ImageView
        android:id="@+id/lockimage"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="locklogo"
        app:srcCompat="@drawable/padlock" />

    <TextView
        android:id ="@+id/title"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockimage"
        android:text="Play Flash Cards"
        android:textColor="@android:color/darker_gray"
        android:textSize="35sp" />

    <TextView
        android:id ="@+id/flashCardText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="350dp"
        android:width="350dp"
        android:paddingTop="20dp"
        android:layout_below="@id/title"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />


    <Button
        android:id="@+id/play"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/flashCardText"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Play"

        />

    <Button
        android:id="@+id/selectdeck"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/play"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Select Deck" />




</RelativeLayout>